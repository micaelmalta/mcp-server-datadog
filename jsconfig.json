{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ES2024",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "allowJs": true,
    "checkJs": true,
    "lib": ["ES2022"],
    "baseUrl": ".",
    "paths": {
      "#utils/*": ["src/utils/*"],
      "#clients/*": ["src/clients/*"],
      "#tools/*": ["src/tools/*"],
      "#test/*": ["test/*"]
    }
  },
  "include": ["src/**/*", "test/**/*"],
  "exclude": ["node_modules"]
}
